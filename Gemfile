# frozen_string_literal: true

source "https://rubygems.org"

# Версия Jekyll, которую ты используешь
gem "jekyll", "~> 4.4.1"

# Группа плагинов (обязательно добавь jekyll-feed сюда)
group :jekyll_plugins do
  gem "jekyll-feed", "~> 0.17"
end

# Важно для Windows: помогает обрабатывать кодировки и зависимости
gem "webrick", "~> 1.8"

gem 'wdm', '>= 0.1.0'
